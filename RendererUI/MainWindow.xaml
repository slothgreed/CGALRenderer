<Window
    x:Class="RendererUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RendererUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:presenter="clr-namespace:KIPresenter;assembly=KIPresenter"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <presenter:ViewModel />
    </Window.DataContext>
    <Border
        Margin="16.0"
        Background="LightGray"
        BorderBrush="Aquamarine"
        BorderThickness="{Binding Value}"
        CornerRadius="{Binding Value}">
        <StackPanel Margin="8.0">
            <TextBlock Margin="16.0,8.0,16.0,4.0" Text="Value:" />
            <Slider
                Margin="32.0,4.0"
                LargeChange="1.0"
                Maximum="10.0"
                Minimum="0.0"
                SmallChange="0.1"
                Value="{Binding Value}" />
            <TextBlock
                Margin="32.0,4.0,32.0,8.0"
                Text="{Binding Value}"
                TextAlignment="Center" />
        </StackPanel>
    </Border>
</Window>
